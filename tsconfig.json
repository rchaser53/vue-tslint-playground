{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "target": "es2015",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmit": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2015",
      "es2016",
      "dom",
      "es2017.object"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}
